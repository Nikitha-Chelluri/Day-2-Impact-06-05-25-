import java.util.*;
public class Main {
    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
        int num = s.nextInt();
        while (num > 1) {
            if (num % 2 == 0) {
                num = num / 2;
                System.out.println(num);
            }
            else {
                num = (3*num) + 1;
                System.out.println(num);
            }
        }
    }
}
